
<h1>Posts</h1>
<hr>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>Title</th>
      <th>Comment</th>
      <th>User's Email</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.title %></td>
        <td><%= post.comment %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p id="notice">  <%= notice %> </p>


<br>

<%= link_to 'New Post', new_post_path %>
